
@{
    ViewData["Title"] = "Create";
}

<h2>Novo Aviso</h2>

<form action="/Aviso/Create" method="post">

    <div class="form-group mx-sm-3 mb-2">
        <label for="descricao">Descricao </label>
        <input type="text" id="descricao" name="aviso.Descricao" class="form-control" />
        <small class="text-danger">
            @Html.ValidationMessage("aviso.Descricao")
        </small>

    </div>

    <div class="form-group">
        <label for="tipoAviso">Tipo Aviso </label>
        <input type="text" id="tipoAviso" name="aviso.TipoAviso" class="form-control" />
        <small class="text-danger">
            @Html.ValidationMessage("aviso.TipoAviso")
        </small>
    </div>

    <button type="submit" class="btn btn-primary">Cadastrar </button>

    <br> <br>

    <small class="text-success">
        @ViewBag.Message
    </small>

</form>

<br>

@Html.ActionLink("Voltar", "Index", "Aviso")

