@model ClientPassRazorPage.api.ProdutoData

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>ProdutoData</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nome: @ViewBag.Produto.Nome
        </dt>
        <dd>
            Descrição: @ViewBag.Produto.Descricao
        </dd>
        <dt>
            Preço: @ViewBag.Produto.Preco
        </dt>        
    </dl>
    
    <form action="/Produto/ConfirmDelete" method="post">
        <input type="hidden" id="id" name="produto.Id" value="@ViewBag.Produto.Id" />
        <input type="submit" value="Delete" class="btn btn-default" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
